<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddProductsActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:gravity="center"
        android:padding="5dp"
        android:text="添加商品"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linerleibie"
        android:layout_below="@id/txtTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtleibie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类别："></TextView>

        <Spinner
            android:id="@+id/spinnerleibie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:minHeight="36dp"></Spinner>
    </LinearLayout>

    // 商品名称
    <LinearLayout
        android:id="@+id/linearProductName"
        android:layout_below="@+id/linerleibie"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名："></TextView>

        <EditText
            android:id="@+id/editProductName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtProductName"></EditText>
    </LinearLayout>

    // 商品价格
    <LinearLayout
        android:id="@+id/linearProductPrice"
        android:layout_below="@+id/linearProductName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=" 价 格："></TextView>

        <EditText
            android:id="@+id/editProductPrice"
            android:inputType="number|numberDecimal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtProductPrice">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:textSize="20dp">
        <Button
            android:id="@+id/btn_addProduct"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/bg_green_selector"
            android:text="添加商品"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>