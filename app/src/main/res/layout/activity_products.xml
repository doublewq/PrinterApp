<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HistoryActivity"
    android:orientation="vertical">


    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:gravity="center"
        android:padding="5dp"
        android:text="订单"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linearProUser"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtProUser"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户："></TextView>

        <EditText
            android:id="@+id/editProUser"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:layout_toRightOf="@id/txtProUser"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearProPhone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtProPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话："></TextView>

        <EditText
            android:id="@+id/editProPhone"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:layout_toRightOf="@id/txtProPhone"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearProTime"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtProTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="时间："></TextView>

        <EditText
            android:id="@+id/editProTime"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:layout_toRightOf="@id/txtProTime"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearProNum"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtProNum"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="销售数量："></TextView>

        <EditText
            android:id="@+id/editProNum"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:layout_toRightOf="@id/txtProNum"></EditText>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearProPay"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtProPay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="总销售额："></TextView>

        <EditText
            android:id="@+id/editProPay"
            android:layout_width="175dp"
            android:layout_height="wrap_content"
            android:enabled="false"
            android:layout_toRightOf="@id/txtProPay"></EditText>
    </LinearLayout>

    <ListView
        android:id="@+id/lv_products"
        android:layout_width="match_parent"
        android:layout_height="fill_parent" >
    </ListView>

</LinearLayout>