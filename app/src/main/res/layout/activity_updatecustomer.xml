<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateCustomerActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtupcuTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:gravity="center"
        android:padding="5dp"
        android:text="更新客户信息"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linerupyCuName"
        android:layout_below="@id/txtupcuTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtupycuname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="原客户名："></TextView>

        <Spinner
            android:id="@+id/spinnerupyCuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:minHeight="36dp"></Spinner>
    </LinearLayout>

    // 客户名称
    <LinearLayout
        android:id="@+id/linearupCuName"
        android:layout_below="@+id/linerupyCuName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtupCuName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="客户名更改为："></TextView>

        <EditText
            android:id="@+id/editupCuName"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtupCuName">
        </EditText>

    </LinearLayout>

    // 电话
    <LinearLayout
        android:id="@+id/linearupCuPhone"
        android:layout_below="@+id/linearupCuName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtupCuPhone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="电话更改为："></TextView>

        <EditText
            android:id="@+id/editupCuPhone"
            android:inputType="number"
            android:layout_width="200dp"
            android:maxLength="11"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtupCuPhone">
        </EditText>
    </LinearLayout>

    // 电话
    <LinearLayout
        android:id="@+id/linearupCuBeizhu"
        android:layout_below="@+id/linearupCuPhone"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtupCuBeizhu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="备注更改为："></TextView>

        <EditText
            android:id="@+id/editupCuBeizhu"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtupCuBeizhu">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:textSize="20dp">
        <Button
            android:id="@+id/btn_upCustomer"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/bg_green_selector"
            android:text="更新客户信息"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>