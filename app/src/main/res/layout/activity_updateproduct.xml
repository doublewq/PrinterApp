<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UpdateProductActivity"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtupTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#4CAF50"
        android:gravity="center"
        android:padding="5dp"
        android:text="更新商品价格"
        android:textColor="#ffffff"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linerupleibie"
        android:layout_below="@id/txtupTitle"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtupleibie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="类别："></TextView>

        <Spinner
            android:id="@+id/spinnerupleibie"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:minHeight="36dp"></Spinner>
    </LinearLayout>

    // 商品名称
    <LinearLayout
        android:id="@+id/linearupProductName"
        android:layout_below="@+id/linerupleibie"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtupProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="商品名："></TextView>

        <Spinner
            android:id="@+id/spinnerupProductName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="200dp"
            android:layout_toRightOf="@id/txtupProductName"
            android:minHeight="36dp"></Spinner>

    </LinearLayout>

    // 商品价格
    <LinearLayout
        android:id="@+id/linearupProductPrice"
        android:layout_below="@+id/linearupProductName"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/txtupProductPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="  价 格："></TextView>

        <EditText
            android:id="@+id/editupProductPrice"
            android:inputType="number|numberDecimal"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/txtupProductPrice">
        </EditText>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:textSize="20dp">
        <Button
            android:id="@+id/btn_upProduct"
            android:layout_width="wrap_content"
            android:layout_height="40dp"
            android:layout_alignParentBottom="true"
            android:layout_weight="1"
            android:background="@drawable/bg_green_selector"
            android:text="更新商品价格"
            android:textSize="20dp" />
    </LinearLayout>
</RelativeLayout>